<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - act_Application</title>
    <link rel="stylesheet" href="/css/General/Complementos/navBar.css">
    <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
    <header> 
    </header>
    <nav class="sidebar close">
        <header>
            <div class="image-text">
                <span class="image">
                    <img src="/img/SdXLogo.png" alt="Logo">
                </span>

                <div class="text logo-text">
                    <span class="name">Aportaciones</span>
                    <span class="profession">@User.Identity.Name</span>
                    <span class="tipousuario">@User.FindFirst("TipoUsuario")?.Value</span>
                </div>
            </div>

            <i class='bx bx-chevron-right toggle'></i>
        </header>

        <div class="menu-bar">
            <div class="menu">
                <ul>
                    <li class="search-box">
                        <i class='bx bx-search icon'></i>
                        <input type="text" placeholder="Search...">
                    </li>
                </ul>
                <ul class="menu-links">

                    @if (User.HasClaim("Rol", "Administrador"))
                    {
                        <li class="nav-link">
                            <button id="adminButton" type="button" class="toggle-button">
                                <i class='bx bx-home-alt icon'></i>
                                <span class="text nav-text">Administracion</span>
                            </button>
                        </li>
                        <li class="nav-link hidden-item">
                            <a href="~/ActUsers/Index">
                                <i class='bx bx-table icon'></i>
                                <span class="text nav-text">T. Usuarios</span>
                            </a>
                        </li>
                        <li class="nav-link hidden-item">
                            <a href="~/ActRols/Index">
                                <i class='bx bx-table icon'></i>
                                <span class="text nav-text">T. Roles</span>
                            </a>
                        </li>
                        <li class="nav-link hidden-item">
                            <a href="~/ActRolUsers/Index">
                                <i class='bx bx-table icon'></i>
                                <span class="text nav-text">T. Roles y Usuarios</span>
                            </a>
                        </li>
                        <li class="nav-link hidden-item">
                            <a href="~/ActAportaciones/Index">
                                <i class='bx bx-table icon'></i>
                                <span class="text nav-text">T. Aportaciones</span>
                            </a>
                        </li>
                        <li class="nav-link hidden-item">
                            <a href="~/ActTransacciones/Index">
                                <i class='bx bx-table icon'></i>
                                <span class="text nav-text">T. Transacciones</span>
                            </a>
                        </li>
                        <li class="nav-link hidden-item">
                            <a href="~/ActMultas/Index">
                                <i class='bx bx-table icon'></i>
                                <span class="text nav-text">T. Multas</span>
                            </a>
                        </li>
                    }

                    <li class="nav-link">
                        <a href="#">
                            <i class='bx bx-money icon'></i>
                            <span class="text nav-text">Aportar</span>
                        </a>
                    </li>

                    <li class="nav-link">
                        <a href="#">
                            <i class='bx bx-bell icon'></i>
                            <span class="text nav-text">Notificationes</span>
                        </a>
                    </li>

                    <li class="nav-link">
                        <a href="~/TablaAportaciones/Index">
                            <i class='bx bx-table icon'></i>
                            <span class="text nav-text">Tabla de Aportacion</span>
                        </a>
                    </li>

                    <li class="nav-link">
                        <a href="#">
                            <i class='bx bx-window-close icon'></i>
                            <span class="text nav-text">Multas</span>
                        </a>
                    </li>

                </ul>
            </div>

            <div class="bottom-content">
                <ul>
                    <li class="Logout-cerrarsesion">
                        <a href="@Url.Action("CerrarSesion", "Home")">
                            <i class='bx bx-log-out icon'></i>
                            <span class="text nav-text">Logout</span>
                        </a>
                    </li>

                    <li class="mode">
                        <div class="sun-moon">
                            <i class='bx bx-moon icon moon'></i>
                            <i class='bx bx-sun icon sun'></i>
                        </div>
                        <span class="mode-text text">Dark mode</span>

                        <div class="toggle-switch">
                            <span class="switch"></span>
                        </div>
                    </li>
                </ul>
            </div>
        </div>

    </nav>

    <section class="home">
        <div class="content-container">
            @RenderBody()
        </div>
    </section>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src= "/js/navBar.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
