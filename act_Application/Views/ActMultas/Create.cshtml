@model act_Application.Models.BD.ActMulta
@{
    ViewData["Title"] = "Crear Multas";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/Administracion/estiloEditarCrear.css" />
</head>

<div class="content-text">
    <h1>Crear Multas</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="IdUser" class="control-label">Id del usuario</label>
                    <input asp-for="IdUser" class="form-control" />
                    <span asp-validation-for="IdUser" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Porcentaje" class="control-label">Porcentaje</label>
                    <input asp-for="Porcentaje" class="form-control" />
                    <span asp-validation-for="Porcentaje" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdAportacion" class="control-label">Id de la Aportacion</label>
                    <input asp-for="IdAportacion" class="form-control" />
                    <span asp-validation-for="IdAportacion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Valor" class="control-label">Valor</label>
                    <input asp-for="Valor" class="form-control" />
                    <span asp-validation-for="Valor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FechaMulta" class="control-label">Fecha de la Multa</label>
                    <input asp-for="FechaMulta" class="form-control" />
                    <span asp-validation-for="FechaMulta" class="text-danger"></span>
                    @{
                        act_Application.Logica.ComplementosLogicos.ObtenerCuadrante.CalcularCuadrantesMulta(Model);
                    }
                </div>
                <div class="btn-container">
                    <input type="submit" value="Crear" class="btn" />
                    <a class="btn-return" asp-action="Index">Regresar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
