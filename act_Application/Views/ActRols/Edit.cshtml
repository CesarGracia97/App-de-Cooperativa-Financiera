@model act_Application.Models.ActRol

@{
    ViewData["Title"] = "Editar Roles";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/formularioEdicion.css" />
</head>
<div class="content-text">

    <h1>Editar Roles</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Id" class="control-label">Id del Rol</label>
                    <input asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NombreRol" class="control-label">Nombre del Rol</label>
                    <input asp-for="NombreRol" class="form-control" />
                    <span asp-validation-for="NombreRol" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DescripcionRol" class="control-label">Descripcion del Rol</label>
                    <input asp-for="DescripcionRol" class="form-control" />
                    <span asp-validation-for="DescripcionRol" class="text-danger"></span>
                </div>
                <div class="btn-container">
                    <input type="submit" value="Guardar" class="btn" />
                    <a class="btn-return" asp-action="Index">Regresar</a>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
