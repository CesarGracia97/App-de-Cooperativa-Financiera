@model act_Application.Models.ActRolUser

@{
    ViewData["Title"] = "Delete";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/eliminar.css" />
</head>
<div class="content-text">
    <h1>Eliminar Roles de Usuario</h1>
    <hr />
    <div class="container">
        <table>
            <tr>
                <td class="titulo">Id del usuario</td>
                <td class="texto"> @Html.DisplayFor(model => model.IdUser)</td>
            </tr>
            <tr>
                <td class="titulo">Id del Rol</td>
                <td class="texto">@Html.DisplayFor(model => model.IdRol)</td>
            </tr>
        </table>
    </div>
    <div class="btn-container">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Eliminar" class="btn-delete" />
            <a class="btn-return" asp-action="Index">Regresar</a>
        </form>
    </div>
</div>
