@{
    ViewData["Title"] = "Aportar";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/General/aportar.css">
    <script src="~/js/aportar.js"> </script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <div class="container">
        <h2>Registro de Aportación</h2>
        <form id="aportacion-form">
            <label for="monto">Monto:</label>
            <div class="input-container">
                <span class="dollar-sign">$</span>
                <input class="input-monto" type="number" id="monto" name="monto" step="0.01" required>
            </div>

            <label for="banco">Banco:</label>
            <select id="banco" name="banco" required>
                <option value="Banco Pichincha">Banco Pichincha</option>
                <option value="Banco Guayaquil">Banco Guayaquil</option>
                <option value="Produbanco">Produbanco</option>
                <option value="Banco del Austro">Banco del Austro</option>
            </select>

            <label for="cuenta">Cuenta:</label>
            <input class="input-cuenta" type="number" id="cuenta" name="cuenta" min="10000000" max="999999999999" required>
            <div class="error-message">Rango de números mínimo 8 y máximo 12</div>

            <label for="date-label">Fecha de Hoy:</label>
            <div class="date">
                <script>
                    date = new Date().toLocaleDateString();
                    document.write(date);
                </script>
            </div>

            <label for="razon">Razón:</label>
            <select id="razon" name="razon" required>
                <option value="CUOTA">CUOTA</option>
            </select>

            <label for="comprobante">Comprobante de Transferencia:</label>
            <input class="input-file" type="file" id="comprobante" name="comprobante" accept=".jpg, .png" required>

            <div class="buttons">
                <button type="submit" class="save-button">Guardar</button>
                <button type="button" class="clear-button">Limpiar</button>
            </div>
        </form>
    </div>
</body>
