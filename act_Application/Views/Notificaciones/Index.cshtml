    DateTime fechaActual = DateTime.Now;
    string fechaactual = fechaActual.ToString("yyyy-MM-dd");
    DateTime minDateP = DateTime.Now.AddDays(46);
    string minDateStrP = minDateP.ToString("dd-MMMM-yyyy");

    var notificacionAdminList = Model
        .Where(notif => User.HasClaim("Rol", "Administrador") && notif.Notificaciones.Destino == "Administrador")
        .OrderByDescending(notifA => notifA.Notificaciones.FechaGeneracion)
        .ToList();
