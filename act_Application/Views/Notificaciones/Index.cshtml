    var userIdClaim = User.Claims.FirstOrDefault(c => c.Type == "Id");
    int IdUser = -1, Bandera = 0;
    if (userIdClaim != null && int.TryParse(userIdClaim.Value, out IdUser))
        Bandera = IdUser;
