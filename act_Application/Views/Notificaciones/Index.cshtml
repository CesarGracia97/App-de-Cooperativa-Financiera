@model IEnumerable<act_Application.Models.Sistema.ViewModel.Notificaciones_VM>
@using act_Application.Data.Repository;
@using act_Application.Logic.ComplementosLogicos;
@{
    ViewData["Title"] = "Notificaciones";

    bool condicionUser = false;
    var userIdClaim = User.Claims.FirstOrDefault(c => c.Type == "Id");
    int IdUser = -1;
    if (userIdClaim != null && int.TryParse(userIdClaim.Value, out IdUser))
        condicionUser = (bool) new NotificacionesRepository().OperacionesNotificaciones( 2, 0, IdUser);
    //Variables de Vista
    DateTime fechaActual = DateTime.Now;
    string fechaactual = fechaActual.ToString("yyyy-MM-dd");
    DateTime minDateP = DateTime.Now.AddDays(46);
    string minDateStrP = minDateP.ToString("dd-MMMM-yyyy");
    var notificacionAdminList = Model.OrderByDescending(notif => notif.Notificaciones.FechaGeneracion).ToList();
}
<header>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/General/Notificaciones/Notificaciones_1.css" />
    <link rel="stylesheet" href="/css/General/Notificaciones/Notificaciones_2.css" />
    <script src="/js/General/Notificaciones/Notificaciones_1.js"></script>
    <script src="/js/General/Notificaciones/Notificaciones_2.js"></script>
</header>
<body>
    <div class="content-text">
        <h1>Notificaciones</h1>
        @if (User.HasClaim("Rol", "Administrador"))
        {
            @if ((bool) new NotificacionesRepository().OperacionesNotificaciones( 1, 0, 0))
            {
                <div class="content-notif">
                    @foreach (var notificacionAdmin in notificacionAdminList)
                    {
                        @if(notificacionAdmin.Notificaciones.Visto == "NO")
                        {
                            switch ((string) new ObtenerTipoNotificacion().ClasificarInformacion(notificacionAdmin.Notificaciones.IdActividad))
                            {
                                case "NUSE":
                                    <p class="notif-text">Razon: @notificacionAdmin.Notificaciones.FechaGeneracion</p>
                                    <div class="notif-container">
                                        <p class="notif-text">Razon: @notificacionAdmin.Notificaciones.IdActividad | Nuevo Usuario</p>
                                        <p class="notif-text">Razon: @notificacionAdmin.Notificaciones.Razon</p>
                                        <p class="notif-text">Fecha: @notificacionAdmin.Notificaciones.FechaGeneracion.ToString("dd-MMMM-yyyy")</p>
                                        <button class="btn-visualizar" data-notification-id="@notificacionAdmin.Notificaciones.Id">Visualizar</button>
                                    </div>
                                    break;
                                case "APOR":
                                    <p class="notif-text">Razon: @notificacionAdmin.Notificaciones.FechaGeneracion</p>
                                    <div class="notif-container">
                                        <p class="notif-text">Razon: @notificacionAdmin.Notificaciones.IdActividad | Nueva Aportacion</p>
                                        <p class="notif-text">Razon: @notificacionAdmin.Notificaciones.Razon</p>
                                        <p class="notif-text">Fecha: @notificacionAdmin.Notificaciones.FechaGeneracion.ToString("dd-MMMM-yyyy")</p>
                                        <button class="btn-visualizar" data-notification-id="@notificacionAdmin.Notificaciones.Id">Visualizar</button>
                                    </div>
                                    break;
                                case "MULT":
                                    <p class="notif-text">Razon: @notificacionAdmin.Notificaciones.FechaGeneracion</p>
                                    <div class="notif-container">
                                        <p class="notif-text">Razon: @notificacionAdmin.Notificaciones.IdActividad | Nueva Multa</p>
                                        <p class="notif-text">Razon: @notificacionAdmin.Notificaciones.Razon</p>
                                        <p class="notif-text">Fecha: @notificacionAdmin.Notificaciones.FechaGeneracion.ToString("dd-MMMM-yyyy")</p>
                                        <button class="btn-visualizar" data-notification-id="@notificacionAdmin.Notificaciones.Id">Visualizar</button>
                                    </div>
                                    break;
                                case "CUOT":
                                    <p class="notif-text">Razon: @notificacionAdmin.Notificaciones.FechaGeneracion</p>
                                    <div class="notif-container">
                                        <p class="notif-text">Razon: @notificacionAdmin.Notificaciones.IdActividad | Cuota</p>
                                        <p class="notif-text">Razon: @notificacionAdmin.Notificaciones.Razon</p>
                                        <p class="notif-text">Fecha: @notificacionAdmin.Notificaciones.FechaGeneracion.ToString("dd-MMMM-yyyy")</p>
                                        <button class="btn-visualizar" data-notification-id="@notificacionAdmin.Notificaciones.Id">Visualizar</button>
                                    </div>
                                    break;
                                case "PRES":
                                    <p class="notif-text">Razon: @notificacionAdmin.Notificaciones.FechaGeneracion</p>
                                    <div class="notif-container">
                                        <p class="notif-text">Razon: @notificacionAdmin.Notificaciones.IdActividad | Prestamo Generado</p>
                                        <p class="notif-text">Razon: @notificacionAdmin.Notificaciones.Razon</p>
                                        <p class="notif-text">Fecha: @notificacionAdmin.Notificaciones.FechaGeneracion.ToString("dd-MMMM-yyyy")</p>
                                        <button class="btn-visualizar" data-notification-id="@notificacionAdmin.Notificaciones.Id">Visualizar</button>
                                    </div>
                                    break;
                            }
                        }
                    }
                </div>
            }
            else
            {
                <p>Actualmente no Tienes Notificaciones.</p>
            }
        }
    
        else
        {
            @if (!User.HasClaim("Rol", "Administrador") && (User.HasClaim("Rol", "Socio") || User.HasClaim("Rol", "Referido")))
            {
                @if (condicionUser)
                {
                    <div class="content-notif">
                        @foreach (var notificacionUser in Model)
                        {
                            <div class="notif-container">
                                <p class="notif-text">Razon: @notificacionUser.Notificaciones.Razon</p>
                                <p class="notif-text">Fecha: @notificacionUser.Notificaciones.FechaGeneracion.ToString("dd-MM-yyyy HH:mm:ss")</p>
                                <button class="btn-visualizar" data-notification-id="@notificacionUser.Notificaciones.Id">Visualizar</button>
                            </div>

                            @if (notificacionUser.Prestamos.Estado == "DENEGADO")
                            {
                                <div class="modal-principal" id="modal-@notificacionUser.Notificaciones.Id">
                                    <div class="modal__container">
                                        <h2 class="modal__title">Detalles</h2>
                                        <div class="modal__content">
                                            <p class="modal__paragraph"><strong>Razon:</strong> @notificacionUser.Notificaciones.Razon</p>
                                            <p class="modal__paragraph"><strong>Fecha:</strong> @notificacionUser.Notificaciones.FechaGeneracion.ToString("dd-MMMM-yyyy")</p>
                                            <p class="modal__paragraph"><strong>Descripcion:</strong></p>
                                            <p class="modal__description">@notificacionUser.Notificaciones.Descripcion</p>
                                            <div class="container-modal-btn">
                                                <a href="~/Notificaciones/Notificacion" class="modal__close" data-notification-id="@notificacionUser.Notificaciones.Id">Cerrar</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                @if (notificacionUser.Prestamos.Estado != "DENEGADO" && notificacionUser.Prestamos.Estado == "PENDIENTE REFERENTE")
                                {
                                    <div class="modal-principal" id="modal-@notificacionUser.Notificaciones.Id">
                                        <div class="modal__container">
                                            <h2 class="modal__title">Detalles</h2>
                                            <div class="modal__content">
                                                <p class="modal__paragraph"><strong>Razon:</strong> @notificacionUser.Notificaciones.Razon</p>
                                                <p class="modal__paragraph"><strong>Fecha:</strong> @notificacionUser.Notificaciones.FechaGeneracion.ToString("dd-MMMM-yyyy")</p>
                                                <p class="modal__paragraph"><strong>Descripcion:</strong></p>
                                                <p class="modal__description">@notificacionUser.Notificaciones.Descripcion</p>
                                                <div class="container-modal-btn">
                                                    <button class="btn-mdl-aceptar" data-notification-id="@notificacionUser.Notificaciones.Id">Aceptar</button>
                                                    <button class="btn-mdl-rechazar" data-notification-id="@notificacionUser.Notificaciones.Id">Rechazar</button>
                                                    <a href="~/Notificaciones/Notificacion" class="modal__close" data-notification-id="@notificacionUser.Notificaciones.Id">Cerrar</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="modal-aceptar" id="modal-aceptar-@notificacionUser.Notificaciones.Id">
                                        <div class="modal-aceptar__container">
                                            <h2 class="modal__title">Esta seguro en Aceptar las condiciones dadas por los Administradores?</h2>
                                            <div class="modal-aceptar__content">
                                                <form asp-action="AceptarReferente">
                                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                    <input type="hidden" asp-for="@notificacionUser.Prestamos.Id" name="Id" id="Id" />
                                                    <div class="container-modal-btn">
                                                        <button type="submit" data-notification-id="@notificacionUser.Notificaciones.Id" class="save-button">Aceptar</button>
                                                        <a href="~/Notificaciones/Notificacion" class="modal-secundaria__close" data-notification-id="@notificacionUser.Notificaciones.Id">Cerrar</a>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="modal-rechazar" id="modal-rechazar-@notificacionUser.Notificaciones.Id">
                                        <div class="modal-rechazar__container">
                                            <h2 class="modal__title">Esta Seguro en Rechazar las condiciones dadas por los Administradores?</h2>
                                            <div class="modal-rechazar__content">
                                                <form asp-action="RechazarReferente">
                                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                    <input type="hidden" asp-for="@notificacionUser.Prestamos.Id" name="Id" id="Id" />
                                                    <div class="container-modal-btn">
                                                        <button type="submit" class="save-button" data-notification-id="@notificacionUser.Notificaciones.Id">Rechazar</button>
                                                        <a href="~/Notificaciones/Notificacion" class="modal-secundaria__close" data-notification-id="@notificacionUser.Notificaciones.Id">Cerrar</a>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        }
                    </div>
                }
                else
                {
                    <p>Actualmente no Tienes Notificaciones.</p>
                }
            }
            else
            {
                <p>Usted no tiene permisos para esta funcion.</p>
            }
        }
    </div>
</body>