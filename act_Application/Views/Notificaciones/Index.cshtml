@model IEnumerable<act_Application.Models.BD.ActNotificacione>
@using act_Application.Data.Data;
@using act_Application.Logica;
@{
    ViewData["Title"] = "Notificaciones";
    var NotifiRepository = new NotificacionesRepository();
    int TotalNotiAdmin = NotifiRepository.GetTotalNotificacionesAdministrador();
}
<header>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/General/Notificaciones.css" />
    <script src="/js/Notificaciones.js"></script>
</header>
<body>
    <div class="content-text">
        <h1>Notificaciones</h1>
        @if (TotalNotiAdmin > 0)
        {
            <div class="content-notif">
                @foreach (var notificacion in Model)
                {
                    <div class="notif-container">
                        <p class="notif-text">Razon: @notificacion.Razon</p>
                        <p class="notif-text">Fecha: @notificacion.FechaNotificacion.ToString("yyyy-MM-dd HH:mm:ss")</p>
                        <button class="btn-visualizar" data-notification-id="@notificacion.Id">Visualizar</button>
                    </div>
                    <div class="modal" id="modal-@notificacion.Id">
                        <div class="modal__container">
                            <h2 class="modal__title">Detalles</h2>
                            <div class="modal__content">
                                <p class="modal__paragraph"><strong>Razon:</strong> @notificacion.Razon</p>
                                <p class="modal__paragraph"><strong>Fecha:</strong> @notificacion.FechaNotificacion.ToString("yyyy-MM-dd HH:mm:ss")</p>
                                <p class="modal__paragraph"><strong>IdUser:</strong> @notificacion.IdUser</p>
                                <p class="modal__paragraph"><strong>Descripcion:</strong></p>
                                <p class="modal__description">@notificacion.Descripcion</p>
                                <p class="modal__paragraph"><strong>Destino:</strong> @notificacion.Destino</p>                            
                                <a href="#" class="modal__close" data-notification-id="@notificacion.Id">Cerrar Modal</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>Actualmente no Tienes Notificaciones.</p>
        }
    </div>
</body>