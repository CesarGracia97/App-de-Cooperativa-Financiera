@model IEnumerable<act_Application.Models.BD.ActTransaccione>

@{
    ViewData["Title"] = "Notificaciones";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/Administracion/estiloTablaIndex.css" />
</head>
<div class="content-text">
    <h1>Transacciones</h1>
    <p>
        <a class="button create" asp-action="CreateTransacciones">Crear Nuevo Registro</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Razon
                </th>
                <th>
                    Id del Usuario
                </th>
                <th>
                    Valor
                </th>
                <th>
                    Estado
                </th>
                <th>
                    Fecha del Pago total del Prestamo
                </th>
                <th>
                    Fecha de la Entrega del Dinero
                </th>
                <th>
                    Fecha de Inicio de pago de Cuotas del Prestamo
                </th>
                <th>
                    Acciones
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Razon)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdUser)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Valor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaPagoTotalPrestamo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaEntregaDinero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaIniCoutaPrestamo)
                    </td>
                    <td>
                        <a class="button edit" asp-action="EditTransacciones" asp-route-id="@item.Id">Editar</a>
                        <a class="button delete" asp-action="DeleteTransacciones" asp-route-id="@item.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>